<div class="card">
    <div class="card-header clearfix">
        <h2 class="pull-left profile-header">${Resource.msg('rewards.header','loyalty',null)}</h2>
    </div>
    <div class="card-body">
        <form
            action="${URLUtils.url('Account-Enroll')}"
            class="registration"
            method="POST">

            <p>${Resource.msg('rewards.rewardHeader', 'loyalty', null)}</p>

            <input type="hidden" name="${pdict.csrf.tokenName}" value="${pdict.csrf.token}"/>

            <button type="submit" class="btn btn-block btn-primary">
                ${Resource.msg('rewards.enrollsubmit', 'loyalty', null)}
            </button>
        </form>
    </div>
</div>